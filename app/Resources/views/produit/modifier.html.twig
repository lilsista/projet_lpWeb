{% extends 'base.html.twig' %}
{% block body %}
    <div class="formulaireProduit ">
        <div class="text-center">
            <h1>modifier un produit</h1>
        </div>
        {{ form_start(formProduit) }}
        {{ form_errors(formProduit) }}
        <div  class="form-group row">
            {{ form_label(formProduit.designation,"désignation", {'label_attr': {'class':'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(formProduit.designation, {'attr': {'class':'form-control'}}) }}
            </div>

        </div>
        <div class="form-group row">

            {{ form_label(formProduit.description,null,{'label_attr': {'class':'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(formProduit.description, {'attr': {'class':'form-control'}}) }}
            </div>

        </div>
        <div class="form-group row">
            {{ form_label(formProduit.prix,null, {'label_attr': {'class':'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(formProduit.prix, {'attr': {'class':'form-control'}}) }}
            </div>

        </div>
        <div class="form-group row">
            {{ form_label(formProduit.quantite, "quantité", {'label_attr': {'class':'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(formProduit.quantite, {'attr': {'class':'form-control'}}) }}
            </div>

        </div>

        <div class="form-group row">
            {{ form_label(formProduit.image,null, {'label_attr': {'class':'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(formProduit.image) }}
            </div>

        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                {{ form_widget(formProduit.modifier, {'attr': {'class':'btn btn-dark'}}) }}
            </div>

        </div>

        {{ form_end(formProduit) }}
    </div>

{% endblock %}